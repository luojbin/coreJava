<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true">
    <appender name="ca" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %contextName [%t] %highlight(%-5level) %-20logger{20}:%-3line - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="all">
        <appender-ref ref="ca" />
    </root>
</configuration>
